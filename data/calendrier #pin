<hr/>
<section class="calendar" id="section">
  <form id="cal">
    <label class="weekday">Su</label>
    <label class="weekday">Mo</label>
    <label class="weekday">Tu</label>
    <label class="weekday">We</label>
    <label class="weekday">Th</label>
    <label class="weekday">Fr</label>
    <label class="weekday">Sa</label>
  </form>
</section>

<script>

var form = document.getElementById('cal')
var now = new Date()

var options = {month: 'long'};
var month = new Intl.DateTimeFormat('fr-CA', options).format(now)
//var month = new Intl.DateTimeFormat('en-US', options).format(now)
var header = document.createElement('h1')
header.innerHTML = month + " " + now.getFullYear()
document.getElementById('section').prepend(header)

for (var i = 1; i < 36; i++) {
  var elem = document.createElement('label')
  elem.day = i
  elem.className = i > 4 ? "day" : "day invalid"
  form.appendChild(elem)
  
  var input = document.createElement('input')
  input.className = 'appointment'
  input.type = 'text'
  input.date = i-4
  input.required = 'true'
  input.placeholder = 'What would you like to do?'
  elem.appendChild(input)

  var day = document.createElement('span')
  day.innerText = i-4
  elem.appendChild(day)

  var em = document.createElement('em')
  elem.appendChild(em)
}
var div = document.createElement('div')
div.className = "clearfix"
form.appendChild(div)
</script>

