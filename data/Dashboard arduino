<h1>Menu</h1>
<div id="menu">
<span class="item" onclick="menuItemClicked('inventaire')">Inventaire</span>
<span class="item" onclick="menuItemClicked('recette')">Recette</span>
<span class="item" onclick="menuItemClicked('manuel')">Manuel</span>
</div>

<script>
function menuItemClicked(id) {
  document.getElementById("inventaire").style.display = "none";
  document.getElementById("recette").style.display = "none";
  document.getElementById("manuel").style.display = "none";
  document.getElementById(id).style.display = "block";
}

function selectedAxis(id) {
  if (document.getElementById(id).style.backgroundColor === "red"){
      document.getElementById(id).style.backgroundColor = "white";    
  } else {
    document.getElementById("axisX").style.backgroundColor = "white";
    document.getElementById("axisY").style.backgroundColor = "white";
    document.getElementById("axisZ").style.backgroundColor = "white";
    document.getElementById(id).style.backgroundColor = "red";
  }
}
</script>

