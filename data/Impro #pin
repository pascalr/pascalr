var x = setInterval(function() {

  //var duree = parseInt($('#duree').text()) - 1
  window.duree = duree - 1
  var minutes = Math.floor(duree/60);
  var seconds = Math.floor(duree%60);
  var str = minutes + ' m ' + seconds + ' s'
  $('#duree').html(str)

  if (duree <= 0) {
    clearInterval(x);
  }
}, 1000);

