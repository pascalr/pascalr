var durees = [30,60,120,180,240,300];
window.duree = durees[Math.floor(Math.random() * durees.length)];
var minutes = Math.floor(duree/60);
var seconds = Math.floor(duree%60);
var str = minutes + ' m ' + seconds + ' s'
$('#duree').html(str)

var categories = ['fusillade', 'champs lexical', 'taxi', 'chanté']
var categorie = categories[Math.floor(Math.random() * categories.length)];
$('#categorie').html(categorie)

var nbThemeParCategorie = {
  taxi: 0,
  fusillade: 10,
}

var themes = ['amour', 'guerre', 'colère', 'mort', 'automne', 'école', 'badminton', 'drummondville']

var theme = ''
var nbTheme = nbThemeParCategorie[categorie]
if (nbTheme === 0) {
  theme = 'N/A'
} else if (nbTheme !== undefined) {
  for (var i = 0; i < nbTheme; i++) {
    theme = theme + themes[Math.floor(Math.random() * themes.length)] + ', ';
  }
  //theme = theme.slice(0,-2)
} else {
  theme = themes[Math.floor(Math.random() * themes.length)];
}

$('#theme').html(theme)

">Nouvelle improvisation</button>

